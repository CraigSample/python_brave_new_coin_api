{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "standard",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"semi": [2, "always"],
		"space-before-function-paren": 0,
		"spaced-comment": 0,
		"indent": [2, "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }]
	}
}
